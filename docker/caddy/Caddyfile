{
	admin off
	auto_https off
	log
	skip_install_trust
}

{$APP_URL_INSECURE}:8080 {
	root * /var/www/html/public
	php_fastcgi 127.0.0.1:9000
	encode gzip
	header -Server
}

http://{$FLY_APP_NAME}.fly.dev:8080 {
	redir {$APP_URL}{uri} permanent
	header -Server
}

:8080 {
 	respond 404
	header -Server
}
